<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.erau.eagleeye.FoundBuilding"
    android:background="#3F51B5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&lt;remarks>"
        android:id="@+id/remarks"
        android:singleLine="false"
        android:layout_below="@+id/buildingName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:background="#ffb219" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Building Found!"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#ffb219" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&lt;building name>"
        android:id="@+id/buildingName"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:background="#ffb219" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eagle_eye_logo"
        android:id="@+id/imageView"
        android:contextClickable="false"
        android:paddingTop="10dp"
        android:layout_below="@+id/remarks"
        android:layout_alignLeft="@+id/buildingName"
        android:layout_alignStart="@+id/buildingName"
        android:layout_marginTop="58dp" />

</RelativeLayout>
