<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.erau.eagleeye.NoMatch"
    android:background="#3F51B5">


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/another_picture_button"
        android:id="@+id/newPicButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/quit_button"
        android:id="@+id/quitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/no_match_message"
        android:id="@+id/noMatchText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffb219"
        android:textColor="#303f9f"
        android:typeface="sans" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eagle_eye_logo"
        android:id="@+id/noMatchPic"
        android:layout_below="@+id/noMatchText"
        android:layout_centerHorizontal="true"
        android:contextClickable="false"
        android:paddingTop="10dp"  />

</RelativeLayout>
